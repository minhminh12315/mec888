<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.layout.HBox?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.Region?>
<AnchorPane xmlns="http://javafx.com/javafx/23.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.home.mec888.controller.patient.DashboardController">
    <BorderPane fx:id="dashboardBorderPane" layoutX="190.0" layoutY="89.0"
                AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0"
                AnchorPane.topAnchor="0.0">
        <top>
            <HBox styleClass="headerPatient" prefHeight="100.0" style="-fx-alignment: CENTER">
                <VBox prefWidth="240.0" styleClass="logo-image">
                    <ImageView fitHeight="80.0" fitWidth="80">
                        <Image url="@../../../../asset/images/logo2.png"/>
                    </ImageView>
                </VBox>
                <Button prefWidth="120.0" fx:id="moveHomeButton" mnemonicParsing="false"
                        onAction="#handleHome" styleClass="dashboard-btn"
                        text="Dashboard"/>
                <Button prefWidth="120.0" fx:id="moveF1" mnemonicParsing="false"
                        onAction="#handleF1" styleClass="dashboard-btn"
                        text="Function 1"/>
                <Button prefWidth="120.0" fx:id="moveF2" mnemonicParsing="false"
                        onAction="#handleF2" styleClass="dashboard-btn"
                        text="Function 2"/>
                <Region HBox.hgrow="ALWAYS"/>
                <!-- HBox đóng vai trò là button -->
                <Button prefWidth="240.0" fx:id="buttonLogout" styleClass="btn-logout"
                        text="Logout" onAction="#logout"/>
            </HBox>
        </top>
        <center>
        </center>
    </BorderPane>
</AnchorPane>