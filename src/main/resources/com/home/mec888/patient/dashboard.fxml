<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>

<AnchorPane style="-fx-background-color: #f0f4f8; -fx-padding: 0 40 0 40" xmlns:fx="http://javafx.com/fxml/1"
            xmlns="http://javafx.com/javafx/23.0.1"
            fx:controller="com.home.mec888.controller.patient.DashboardController"
>

    <GridPane alignment="TOP_CENTER" hgap="40"
              style="-fx-padding: 20 20 0 20"
              vgap="16" AnchorPane.bottomAnchor="0" AnchorPane.leftAnchor="0"
              AnchorPane.rightAnchor="0" AnchorPane.topAnchor="20"
              maxHeight="150" prefHeight="150">

        <!-- Columns -->
        <columnConstraints>
            <ColumnConstraints halignment="LEFT" hgrow="ALWAYS" />
            <ColumnConstraints halignment="LEFT" hgrow="ALWAYS" />
        </columnConstraints>

        <!-- Title -->
        <Label style="-fx-font-size: 24px; -fx-font-weight: bold;" text="Patient Information" GridPane.columnSpan="2" GridPane.halignment="CENTER" GridPane.rowIndex="0" />

        <!-- Row 1: First Name & Last Name -->
        <Label text="First Name:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
        <Label text="Last Name:" GridPane.columnIndex="1" GridPane.rowIndex="1" />
        <Label fx:id="firstNameLabel" style="-fx-font-size: 16px; -fx-text-fill: #333; -fx-background-color: #ffffff;                       -fx-border-color: #ccc; -fx-padding: 6px 8px; -fx-background-radius: 4;                       -fx-border-radius: 4;" GridPane.columnIndex="0" GridPane.rowIndex="2" />
        <Label fx:id="lastNameLabel" style="-fx-font-size: 16px; -fx-text-fill: #333; -fx-background-color: #ffffff;                       -fx-border-color: #ccc; -fx-padding: 6px 8px; -fx-background-radius: 4;                       -fx-border-radius: 4;" GridPane.columnIndex="1" GridPane.rowIndex="2" />

        <!-- Row 2: Gender & Date of Birth -->
        <Label text="Gender:" GridPane.columnIndex="0" GridPane.rowIndex="3" />
        <Label text="Date of Birth:" GridPane.columnIndex="1" GridPane.rowIndex="3" />
        <Label fx:id="genderLabel" style="-fx-font-size: 16px; -fx-text-fill: #333; -fx-background-color: #ffffff;                       -fx-border-color: #ccc; -fx-padding: 6px 8px; -fx-background-radius: 4;                       -fx-border-radius: 4;" GridPane.columnIndex="0" GridPane.rowIndex="4" />
        <Label fx:id="dobLabel" style="-fx-font-size: 16px; -fx-text-fill: #333; -fx-background-color: #ffffff;                       -fx-border-color: #ccc; -fx-padding: 6px 8px; -fx-background-radius: 4;                       -fx-border-radius: 4;" GridPane.columnIndex="1" GridPane.rowIndex="4" />

        <!-- Row 3: Address & Email -->
        <Label text="Address:" GridPane.columnIndex="0" GridPane.rowIndex="5" />
        <Label text="Email:" GridPane.columnIndex="1" GridPane.rowIndex="5" />
        <Label fx:id="addressLabel" style="-fx-font-size: 16px; -fx-text-fill: #333; -fx-background-color: #ffffff;                       -fx-border-color: #ccc; -fx-padding: 6px 8px; -fx-background-radius: 4;                       -fx-border-radius: 4;" GridPane.columnIndex="0" GridPane.rowIndex="6" />
        <Label fx:id="emailLabel" style="-fx-font-size: 16px; -fx-text-fill: #333; -fx-background-color: #ffffff;                       -fx-border-color: #ccc; -fx-padding: 6px 8px; -fx-background-radius: 4;                       -fx-border-radius: 4;" GridPane.columnIndex="1" GridPane.rowIndex="6" />

        <!-- Row 4: Phone & Nationality -->
        <Label text="Phone:" GridPane.columnIndex="0" GridPane.rowIndex="7" />
        <Label text="Nationality:" GridPane.columnIndex="1" GridPane.rowIndex="7" />
        <Label fx:id="phoneLabel" style="-fx-font-size: 16px; -fx-text-fill: #333; -fx-background-color: #ffffff;                       -fx-border-color: #ccc; -fx-padding: 6px 8px; -fx-background-radius: 4;                       -fx-border-radius: 4;" GridPane.columnIndex="0" GridPane.rowIndex="8" />
        <Label fx:id="nationalityLabel" style="-fx-font-size: 16px; -fx-text-fill: #333; -fx-background-color: #ffffff;                       -fx-border-color: #ccc; -fx-padding: 6px 8px; -fx-background-radius: 4;                       -fx-border-radius: 4;" GridPane.columnIndex="1" GridPane.rowIndex="8" />

        <!-- Row 5: Emergency Contact & Medical History -->
        <Label text="Emergency Contact:" GridPane.columnIndex="0" GridPane.rowIndex="9" />
        <Label text="Medical History:" GridPane.columnIndex="1" GridPane.rowIndex="9" />
        <Label fx:id="emergencyContactLabel" style="-fx-font-size: 16px; -fx-text-fill: #333; -fx-background-color: #ffffff;                       -fx-border-color: #ccc; -fx-padding: 6px 8px; -fx-background-radius: 4;                       -fx-border-radius: 4;" GridPane.columnIndex="0" GridPane.rowIndex="10" />
        <Label fx:id="medicalHistoryLabel" style="-fx-font-size: 16px; -fx-text-fill: #333; -fx-background-color: #ffffff;                       -fx-border-color: #ccc; -fx-padding: 6px 8px; -fx-background-radius: 4;                       -fx-border-radius: 4;" GridPane.columnIndex="1" GridPane.rowIndex="10" />

        <!-- Row 6: Error -->
        <Label fx:id="labelError" style="-fx-text-fill: red; -fx-font-style: italic; -fx-font-size: 14px;" text="" GridPane.columnSpan="2" GridPane.halignment="CENTER" GridPane.rowIndex="11" />
      <rowConstraints>
         <RowConstraints />
         <RowConstraints />
         <RowConstraints />
         <RowConstraints />
         <RowConstraints />
         <RowConstraints />
         <RowConstraints />
         <RowConstraints />
         <RowConstraints />
         <RowConstraints />
         <RowConstraints />
         <RowConstraints />
      </rowConstraints>
    </GridPane>
</AnchorPane>
