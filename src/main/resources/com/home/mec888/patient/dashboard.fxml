<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Text?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.home.mec888.controller.patient.DashboardController">

    <ScrollPane fitToWidth="true" AnchorPane.bottomAnchor="0"
                AnchorPane.leftAnchor="0"
                AnchorPane.rightAnchor="0"
                AnchorPane.topAnchor="0"
                style="-fx-background:white;
                       -fx-background-color:white;
                       -fx-border-width: 0;">
        <VBox alignment="TOP_CENTER" spacing="16" style="-fx-padding: 32 16 64 16;">
            <VBox VBox.vgrow="ALWAYS" alignment="CENTER" spacing="8" style="-fx-padding: 0 0 32 0;">
                <Text styleClass="titlePage" text="Patient Profile" textAlignment="CENTER"/>
            </VBox>
            <HBox alignment="CENTER" spacing="8">
                <VBox HBox.hgrow="ALWAYS" spacing="4" styleClass="textFieldDisable">
                    <Label text="First Name"/>
                    <Label fx:id="firstNameLabel" text="LE DUC AN" textAlignment="CENTER"/>
                </VBox>
                <VBox HBox.hgrow="ALWAYS" spacing="4" styleClass="textFieldDisable">
                    <Label text="Last Name"/>
                    <Label fx:id="lastNameLabel" text="LE DUC AN" textAlignment="CENTER"/>
                </VBox>
                <VBox HBox.hgrow="ALWAYS" spacing="4" styleClass="textFieldDisable">
                    <Label text="Gender"/>
                    <Label fx:id="genderLabel" text="Male" textAlignment="CENTER"/>
                </VBox>
            </HBox>
            <HBox alignment="CENTER" spacing="8">
                <VBox HBox.hgrow="ALWAYS" spacing="4" styleClass="textFieldDisable">
                    <Label text="Date of Birth"/>
                    <Label fx:id="dobLabel" text="01-04-2005" textAlignment="CENTER"/>
                </VBox>
                <VBox HBox.hgrow="ALWAYS" spacing="4" styleClass="textFieldDisable">
                    <Label text="Email"/>
                    <Label fx:id="emailLabel" text="an.duc.0104@gmail.com" textAlignment="CENTER"/>
                </VBox>
                <VBox HBox.hgrow="ALWAYS" spacing="4" styleClass="textFieldDisable">
                    <Label text="Phone"/>
                    <Label fx:id="phoneLabel" text="0911231231" textAlignment="CENTER"/>
                </VBox>
            </HBox>
            <HBox alignment="CENTER" spacing="8">
                <VBox HBox.hgrow="ALWAYS" spacing="4" styleClass="textFieldDisable">
                    <Label text="Address"/>
                    <Label fx:id="addressLabel" text="285 Đội Cấn, Ba Đình, Hà Nội" textAlignment="CENTER"/>
                </VBox>
            </HBox>
            <HBox alignment="CENTER" spacing="8">
                <VBox HBox.hgrow="ALWAYS" spacing="4" styleClass="textFieldDisable">
                    <Label text="Emergency Contact"/>
                    <Label fx:id="emergencyContactLabel" text="0901231234" textAlignment="CENTER"/>
                </VBox>
                <VBox HBox.hgrow="ALWAYS" spacing="4" styleClass="textFieldDisable">
                    <Label text="Medical History"/>
                    <Label fx:id="medicalHistoryLabel" text="Tien su dau tim" textAlignment="CENTER"/>
                </VBox>
            </HBox>
            <HBox alignment="CENTER" spacing="8">
                <VBox HBox.hgrow="ALWAYS" spacing="4" styleClass="textFieldDisable">
                    <Label text="Nationality"/>
                    <Label fx:id="nationalityLabel" text="Vietnamese" textAlignment="CENTER"/>
                </VBox>
            </HBox>
        </VBox>
    </ScrollPane>
</AnchorPane>